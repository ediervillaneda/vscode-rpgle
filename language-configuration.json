{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*","*/"]
  },
  "brackets": [["{","}"], ["[","]"], ["(",")"]],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" }

  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["`", "`"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "(?i)({(?!.+}).*|\\(|\\[|((else(\\s)?)?if|else|for(each)?|while|select|do|dow|when|Exec Sql).*:)\\s*(/[/*].*)?$",
    "decreaseIndentPattern": "(?i)^(.*\\*\\/)?\\s*((\\})|(\\)+[;,])|(\\][;,])|\\b(else:)|\\b((end(if|for(each)?|while|select|do|dow|when|Exec Sql));))"
  },
  "folding": {
    "markers": {
      "start": "(?i)^\\s*\\s*#?(Dcl-Proc|Dcl-Pi)\\b",
      "end": "(?i)^\\s*\\s*#?(End-Proc|End-Pi)\\b"
    }
  }
}