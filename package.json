{
  "name": "rpgle",
  "displayName": "RpgLe",
  "description": "Rpg ILE and Command Program (CL) code support",
  "version": "0.0.20190227",
  "publisher": "EdiVilnav",
  "readme": "README.md",
  "icon": "rpg.png",
  "author": {
    "name": "Edier Villaneda"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes"
  ],
  "contributes": {
    "configurationDefaults": {
      "workbench.iconTheme": "material-icon-theme",
      "editor.formatOnSave": true,
      "material-icon-theme.folders.color": "#7cb342",
      "material-icon-theme.folders.theme": "classic",
      "material-icon-theme.files.associations": {
        "*.sqlrpgle": "processing",
        "*.clle": "clojure",
        "*.bnd": "gcp"
      },
      "[rpgle]": {
        "editor.autoClosingBrackets": "always",
        "editor.autoSurround": "brackets",
        "editor.fontSize": 12,
        "editor.tabSize": 2,
        "editor.rulers": [
          6,
          80,
          112
        ]
      },
      "[sql]": {
        "editor.rulers": [
          80,
          112
        ],
        "editor.tabSize": 2
      },
      "[clle]": {
        "editor.rulers": [
          13,
          24,
          80,
          112
        ],
        "editor.tabSize": 2
      }
    },
    "languages": [
      {
        "id": "rpgle",
        "aliases": [
          "Rpg ILE",
          "rpgle",
          "RPGLE"
        ],
        "extensions": [
          ".rpg",
          ".rpgle",
          ".sqlrpgle"
        ],
        "configuration": "./configuration/rpgle-configuration.json"
      },
      {
        "id": "clle",
        "aliases": [
          "Cl ILE",
          "clle"
        ],
        "extensions": [
          ".clle",
          ".cl",
          ".bnd"
        ],
        "configuration": "./configuration/clle-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rpgle",
        "scopeName": "source.rpgle",
        "path": "./syntaxes/rpgle.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.sql": "sql"
        }
      },
      {
        "language": "clle",
        "scopeName": "source.clle",
        "path": "./syntaxes/clle.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "rpgle",
        "path": "./snippets/snippets.json"
      }
    ],
    "themes": [
      {
        "label": "Rpgle Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/rpgle-color-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "material-icon-rpgle-theme",
        "label": "Material Icon Rpg Ile Theme",
        "path": "./iconThemes/dist/material-icons.json",
        "_watch": true
      }
    ]
  }
}